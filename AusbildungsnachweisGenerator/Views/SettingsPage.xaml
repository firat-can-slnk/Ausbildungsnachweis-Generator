<Page
    x:Class="AusbildungsnachweisGenerator.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:AusbildungsnachweisGenerator.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xaml="using:Microsoft.UI.Xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <ScrollViewer>
        <Grid Padding="50">
            <StackPanel Spacing="20">
                <TextBlock
                    Margin="0,20"
                    Style="{StaticResource TitleTextBlockStyle}"
                    Text="Datensicherung" />
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <Button Click="ImportButton_Click" Content="Profile importieren" />
                    <Button Click="ExportButton_Click" Content="Profile exportieren" />
                </StackPanel>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
